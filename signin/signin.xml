<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#DAF4FF">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:background="@drawable/layout"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/buttonsignup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#0e4666"
            android:text="@string/signup"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/layout"
            app:layout_constraintTop_toBottomOf="@id/editTextTextPassword"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="552dp" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:paddingLeft="0dp"
            android:text="Sign in"
            android:textAlignment="center"
            android:textColor="#0e4666"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/Name1"
            app:layout_constraintTop_toTopOf="@id/layout"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="27dp" />

        <TextView
            android:id="@+id/Name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Name"
            android:textColor="#0e4666"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="103dp"
            app:layout_constraintEnd_toStartOf="@id/name"/>

        <TextView
            android:id="@+id/Email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Email"
            android:textColor="#0e4666"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="224dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintBottom_toTopOf="@id/email"/>

        <TextView
            android:id="@+id/Password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Password"
            android:textColor="#0e4666"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="384dp"
            app:layout_constraintEnd_toStartOf="@id/editTextTextPassword"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:minHeight="48dp"
            android:paddingLeft="30dp"
            android:text="Enter Your Name.."
            android:textColorHint="#D7DBDD"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="152dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:minHeight="48dp"
            android:paddingLeft="30dp"
            android:text="Enter Your Email.."
            android:textColorHint="#D7DBDD"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="291dp"
            app:layout_constraintBottom_toTopOf="@id/Password1"
            app:layout_constraintTop_toBottomOf="@id/Email1"/>

        <EditText

            android:id="@+id/editTextTextPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:minHeight="48dp"
            android:paddingLeft="30dp"
            android:text="Enter Your Password"
            android:textColorHint="#D7DBDD"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="447dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout >


</androidx.constraintlayout.widget.ConstraintLayout>
