<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/waterdrop"
            />
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/camgray"

            />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menna Mohamed"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target"
            android:textColor="@color/blue"
            android:textSize="25dp"
            android:textStyle="bold"
            />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                        android:layout_marginTop="10dp">
                                <androidx.cardview.widget.CardView
                                   android:layout_width="170dp"
                                   android:layout_height="170dp"
                                   app:cardCornerRadius="45dp"
                                   app:cardBackgroundColor="@color/v"
                                   android:layout_marginRight="30dp"
                                >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Daily Goal"
                                        android:textSize="20dp"
                                        android:textStyle="bold"
                                        android:paddingLeft="40dp"
                                        android:paddingTop="20dp"
                                        >
                                    </TextView>
                                    <com.mikhaellopez.circularimageview.CircularImageView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/color1"
                                        android:layout_marginTop="57dp"
                                        android:layout_marginLeft="37dp"
                                        >
                                    </com.mikhaellopez.circularimageview.CircularImageView>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="170dp"
                                    android:layout_height="170dp"
                                    app:cardCornerRadius="45dp"
                                    app:cardBackgroundColor="@color/j"

                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="My Account"
                                        android:textSize="20dp"
                                        android:textStyle="bold"
                                        android:paddingLeft="33dp"
                                        android:paddingTop="20dp"
                                        >
                                    </TextView>
                                    <com.mikhaellopez.circularimageview.CircularImageView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/account"
                                        android:layout_marginTop="57dp"
                                        android:layout_marginLeft="37dp"
                                        >
                                    </com.mikhaellopez.circularimageview.CircularImageView>
                                </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            app:cardCornerRadius="45dp"
                            app:cardBackgroundColor="@color/jk"
                            android:layout_marginRight="30dp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Alarm"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:paddingLeft="57dp"
                                android:paddingTop="20dp"
                                >
                            </TextView>
                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/alarm"
                                android:layout_marginTop="57dp"
                                android:layout_marginLeft="37dp"
                                >
                            </com.mikhaellopez.circularimageview.CircularImageView>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            app:cardCornerRadius="45dp"
                            app:cardBackgroundColor="@color/v"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Notifications"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:paddingLeft="29dp"
                                android:paddingTop="20dp"
                                >
                            </TextView>
                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/notif"
                                android:layout_marginTop="57dp"
                                android:layout_marginLeft="37dp"
                                >
                            </com.mikhaellopez.circularimageview.CircularImageView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            app:cardCornerRadius="45dp"
                            app:cardBackgroundColor="@color/j"
                            android:layout_marginRight="30dp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Life Style"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:paddingLeft="44dp"
                                android:paddingTop="20dp"
                                >
                            </TextView>
                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/style"
                                android:layout_marginTop="57dp"
                                android:layout_marginLeft="37dp"
                                >
                            </com.mikhaellopez.circularimageview.CircularImageView>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            app:cardCornerRadius="45dp"
                            app:cardBackgroundColor="@color/jk"

                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Wake-up/Sleep"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:paddingLeft="15dp"
                                android:paddingTop="20dp"
                                >
                            </TextView>
                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/sleep1"
                                android:layout_marginTop="57dp"
                                android:layout_marginLeft="37dp"
                                >
                            </com.mikhaellopez.circularimageview.CircularImageView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            app:cardCornerRadius="45dp"
                            app:cardBackgroundColor="@color/v"
                            android:layout_marginRight="30dp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Settings"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:paddingLeft="47dp"
                                android:paddingTop="20dp"
                                >
                            </TextView>
                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/set"
                                android:layout_marginTop="57dp"
                                android:layout_marginLeft="37dp"
                                >
                            </com.mikhaellopez.circularimageview.CircularImageView>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            app:cardCornerRadius="45dp"
                            app:cardBackgroundColor="@color/j"

                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Log Out"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:paddingLeft="53dp"
                                android:paddingTop="20dp"
                                >
                            </TextView>
                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/oout"
                                android:layout_marginTop="57dp"
                                android:layout_marginLeft="37dp"
                                >
                            </com.mikhaellopez.circularimageview.CircularImageView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
